<% provide(:title, 'Edit user') %>
<% provide(:heading, 'Update your profile') %>
<% provide(:button_text, 'Save changes') %>
<% provide(:path, user_path) %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" rel="noopener" target="_blank">change</a>
      <!-- target="_blank" is a trick to get the browser to open the page in a new window or tab -->
      <!-- rel="noopener" is to prevent the target site from inserting malicious content -->
    </div>
  </div>
</div>
